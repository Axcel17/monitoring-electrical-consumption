<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutSensorConsumption"
    android:layout_width="356dp"
    android:layout_height="90dp"
    android:gravity="start|center_vertical"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imagenViewActuatorCons"
        android:layout_width="81dp"
        android:layout_height="47dp"
        android:layout_marginStart="4dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.511"
        app:srcCompat="@drawable/air_conditioner" />

    <Spinner
        android:id="@+id/spinnerTimes"
        android:layout_width="105dp"
        android:layout_height="30dp"
        android:layout_marginStart="4dp"
        android:contextClickable="false"
        android:nestedScrollingEnabled="false"
        android:paddingRight="15dp"
        android:textAlignment="center"
        android:transitionGroup="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagenViewActuatorCons"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewConsumption"
        android:layout_width="80dp"
        android:layout_height="28dp"
        android:layout_weight="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spinnerTimes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="58dp"
        android:layout_height="28dp"
        android:layout_marginStart="9dp"
        android:layout_weight="1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/textViewConsumption"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.59" />

</androidx.constraintlayout.widget.ConstraintLayout>